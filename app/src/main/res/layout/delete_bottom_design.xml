<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_alert_delete"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">


    <View
        android:layout_width="120dp"
        android:layout_height="9dp"
        android:layout_margin="10dp"
        android:background="@drawable/delete_line_design" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/sans_regular"
        android:gravity="center"
        android:text="Are you sure want to delete\n this note?"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/no_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/no_design_btn"
        android:fontFamily="@font/sans_regular"
        android:gravity="center"
        android:padding="8dp"
        android:text="NO"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/yes_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/yes_design_btn"
        android:fontFamily="@font/sans_regular"
        android:gravity="center"
        android:padding="8dp"
        android:text="YES"
        android:textColor="@color/black"
        android:textSize="18sp" />

</LinearLayout>